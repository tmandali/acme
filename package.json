{
    "name": "acme-root",
    "private": true,
    "scripts": {
        "dev:frontend": "cd frontend && npm run dev",
        "dev:backend": "cd backend && ./.venv/bin/python run_server.py",
        "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
        "install:all": "npm install --prefix frontend && (cd backend && python3 -m venv .venv && ./.venv/bin/pip install -r requirements.txt)",
        "test:backend": "cd backend && ./.venv/bin/pytest"
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    }
}